<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:id="@+id/prevNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="40dp"
            android:textAlignment="textEnd"

            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="0dp"/>
        <TextView
            android:id="@+id/curNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="60dp"
            android:textAlignment="textEnd"
            android:layout_margin="10dp"
            android:maxLength="10"
            android:maxLines="1"
            android:height="200dp"
            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/operationSqrt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:width="50dp"
                    android:height="80dp"
                    android:backgroundTint="@color/green"
                    android:onClick="DoSqrt"
                    android:text="Sqrt"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/operationPow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:width="50dp"
                    android:height="80dp"
                    android:backgroundTint="@color/orange"
                    android:onClick="MakeOperation"
                    android:text="**"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/operationRest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:width="50dp"
                    android:height="80dp"
                    android:backgroundTint="@color/orange"
                    android:onClick="MakeOperation"
                    android:text="%"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/operationBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:width="50dp"
                    android:height="80dp"
                    android:backgroundTint="@color/blue"
                    android:onClick="ClearLast"
                    android:text="Back"
                    android:textSize="17dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/operationAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:width="50dp"
                    android:height="80dp"
                    android:backgroundTint="@color/orange"
                    android:onClick="MakeOperation"
                    android:text="+"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/operationSubstract"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:width="50dp"
                    android:height="80dp"
                    android:backgroundTint="@color/orange"
                    android:onClick="MakeOperation"
                    android:text="-"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/operaionMultiply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:width="50dp"
                    android:height="80dp"
                    android:backgroundTint="@color/orange"
                    android:onClick="MakeOperation"
                    android:text="*"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/operaionDivide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:width="50dp"
                    android:height="80dp"
                    android:backgroundTint="@color/orange"
                    android:onClick="MakeOperation"
                    android:text="/"
                    android:textSize="20dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/number1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:width="50dp"
                    android:height="80dp"
                    android:onClick="EnterNumber"
                    android:text="1"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/number2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:width="50dp"
                    android:height="80dp"
                    android:onClick="EnterNumber"
                    android:text="2"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/number3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:width="50dp"
                    android:height="80dp"
                    android:onClick="EnterNumber"
                    android:text="3"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/number4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:width="50dp"
                    android:height="80dp"
                    android:onClick="EnterNumber"
                    android:text="4"
                    android:textSize="20dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/number5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:width="50dp"
                    android:height="80dp"
                    android:onClick="EnterNumber"
                    android:text="5"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/number6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:width="50dp"
                    android:height="80dp"
                    android:onClick="EnterNumber"
                    android:text="6"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/number7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:width="50dp"
                    android:height="80dp"
                    android:onClick="EnterNumber"
                    android:text="7"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/number8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:width="50dp"
                    android:height="80dp"
                    android:onClick="EnterNumber"
                    android:text="8"
                    android:textSize="20dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/number9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:width="50dp"
                    android:height="80dp"
                    android:onClick="EnterNumber"
                    android:text="9"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/number0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:width="50dp"
                    android:height="80dp"
                    android:onClick="EnterNumber"
                    android:text="0"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/buttonEnter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:width="50dp"
                    android:height="80dp"
                    android:backgroundTint="@color/blue"
                    android:onClick="DoCalculation"
                    android:text="="
                    android:textSize="20dp" />
                <Button
                    android:id="@+id/operationClear"
                    android:backgroundTint="@color/blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C"
                    android:onClick="Clear"
                    android:layout_margin="6dp"
                    android:width="50dp"
                    android:textSize="20dp"
                    android:height="80dp"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>